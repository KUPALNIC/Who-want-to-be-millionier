      border-radius: 5px;
      width: 100%;
      text-align: right;
    }

    .money-item.current {
      background: #ff8c00;
      font-weight: bold;
    }

    .question-box {
      background: rgba(255, 255, 255, 0.1);
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      text-align: center;
    }

    .question-text {
      font-size: 24px;
      margin-bottom: 20px;
      line-height: 1.4;
    }

    .options-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      margin-bottom: 30px;
    }

    .option-btn {
      padding: 15px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.1);
      color: white;
      font-size: 18px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .option-btn:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: scale(1.02);
    }

    .option-btn.correct {
      background: #28a745;
    }

    .option-btn.incorrect {
      background: #dc3545;
    }

    .option-btn.disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .help-buttons {
      display: flex;
      gap: 10px;
      justify-content: center;
      margin-bottom: 20px;
    }

    .help-btn {
      padding: 10px 15px;
      background: #6c757d;
      border: none;
      border-radius: 8px;
      color: white;
      cursor: pointer;
      transition: all 0.3s;
    }

    .help-btn:hover {
      background: #7c858e;
    }

    .help-btn.used {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .lobby-screen {
      padding: 20px;
    }

    .lobby-header {
      text-align: center;
      margin-bottom: 30px;
    }

    .players-list {
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .player-item {
      padding: 10px;
      margin: 5px 0;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .editor-screen {
      padding: 20px;
    }

    .questions-editor {
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 10px;
    }

    .question-editor {
      margin-bottom: 20px;
      padding: 15px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
    }

    .question-editor input {
      width: 100%;
      padding: 8px;
      margin: 5px 0;
      border: none;
      border-radius: 5px;
      background: rgba(255, 255, 255, 0.2);
      color: white;
    }

    .audience-poll {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.9);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }

    .poll-options {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      margin-top: 20px;
    }

    .poll-option {
      padding: 15px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .poll-option:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    .defeat-screen {
      text-align: center;
      padding: 50px 20px;
    }

    .defeat-message {
      font-size: 48px;
      color: #dc3545;
      margin-bottom: 20px;
    }
  </style>
